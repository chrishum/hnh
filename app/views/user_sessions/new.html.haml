%h1 Sign in

= form_for(@user_session, :url => user_sessions_path) do |f|
  = render 'shared/error_messages', :object => f.object
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :password
    %br/
    = f.password_field :password
  .actions
    = f.submit "Sign in"
%br/
%p New user? #{link_to "Register now", register_path}